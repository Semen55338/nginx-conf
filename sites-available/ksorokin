server {
    listen       80;
    server_name  konstantin-sorokin.dev;
    root       /var/www/konstantin-sorokin.com;
 
    access_log  /usr/local/var/log/nginx/ksorokin.access.log main;
 
    location ~ \.php$ {
        include   /usr/local/etc/nginx/conf.d/php-fpm;
    }

    location / {
        try_files $uri $uri/ /index.php?$args;
    }
    
    rewrite /wp-admin$ $scheme://$host$uri/ permanent;

    error_page  404     /404.html;
    error_page  403     /403.html;
}
